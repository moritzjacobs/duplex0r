{
	"editor.tabSize": 4,
	"editor.insertSpaces": true,
	"editor.renderWhitespace": "boundary",
	"editor.rulers": [140],
	"editor.formatOnSave": true,
	"files.encoding": "utf8",
	"files.trimTrailingWhitespace": true,
	"files.insertFinalNewline": true,
	"search.exclude": {
		"dist/**": true,
		"node_modules/**": true
	},
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact"
	],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	}
}
